<h4>Add new post</h4>

<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div class="error-messages">
      <ul>
        <% @posts.errors.each do |error| %>
          <li><%= error.full_messages %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.text_area :text, required: true %>
  </div>
  <div>
    <%= f.submit "Add" %>
  </div>

<% end %>
